<resources>
    <!-- Base application theme -->
    <style name="AppStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- defining colors -->
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryDark">@color/app_primary_dark_color</item>
        <item name="colorAccent">@color/app_accent_color</item>
        <item name="android:divider">@color/app_divider_color</item>
        <item name="android:textColorPrimary">@color/app_primary_text_color</item>
        <item name="android:textColorSecondary">@color/app_secondary_text_color</item>

        <!-- defining ui elements -->
        <item name="drawerArrowStyle">@style/AppStyle.WhiteDrawerIconStyle</item>

        <!-- API 21 only -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:colorButtonNormal">@color/app_primary_color</item>
    </style>


</resources>
